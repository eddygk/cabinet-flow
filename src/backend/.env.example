# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=cabinetflow
DB_PASSWORD=cabinetflow
DB_NAME=cabinetflow

# Authentication
JWT_SECRET=your_jwt_secret_change_this_in_production
JWT_EXPIRATION=24h

# File Storage
STORAGE_TYPE=local # local, s3
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50 # in MB

# S3 Configuration (if using S3 storage)
# S3_BUCKET=cabinetflow-files
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# CORS
CORS_ORIGIN=http://localhost:3000

# QR Code Settings
QR_CODE_EXPIRY=24h # default expiration time for QR codes
QR_CODE_DIR=./qrcodes